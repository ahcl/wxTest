.son {
  border-radius: 50%;
  border: 2px solid;
  position: absolute;
  height: 190px;
  width: 190px;
  left: 8px;
}

.line {
  width: 6px;
  height: 10px;
  background-color: #999;
  position: absolute;
  left: 50%;
  margin-left: -3px;
}

.two {
  height: 10px;
  transform: rotateZ(90deg);
}

.three {
  height: 10px;
  top: 10px;
  transform: rotateZ(30deg);
}

.four {
  height: 10px;
  transform: rotateZ(60deg);
}

.five {
  height: 10px;
  transform: rotateZ(120deg);
}

.six {
  height: 10px;
  transform: rotateZ(150deg);
}

.box {
  background-color: #fff;
  height: 150px;
  width: 150px;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  margin-left: -75px;
  top: 25px;
  z-index: 2;
}

.percent {
  position: absolute;
  width: 210px;
  height: 210px;
  border-radius: 50%;
  box-sizing: border-box;
  /*top: -20px;
  left: -20px;*/
}

.left {
  transition: transform ease;
  border:20px solid red;
  /*border-top-colors:#a0a #909 #808 #707 #606 #505 #404 #303;*/
  border-color: linear-gradient(30deg,red, blue);
  clip: rect(0, 100px, 210px, 0);
  transform: rotate(90deg);
}
